{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2020",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "src/types.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
